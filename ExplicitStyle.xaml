<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MAUI_Styles.ExplicitStyle"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="ExplicitStyle">
    <!-- commented to use global style defined in the app.xaml
    <ContentPage.Resources>
        <Style x:Key="btnStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="Red" />
            <Setter Property="TextColor" Value="Black" />
            <Setter Property="Margin" Value="100,20,100,20" />
            <Setter Property="CornerRadius" Value="50" />
        </Style>
    </ContentPage.Resources>-->
    <VerticalStackLayout>
        <Label
            HorizontalOptions="Center"
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" />

        <Button Style="{StaticResource btnStyle}" Text="Primo" />
        <Button Style="{StaticResource btnStyle}" Text="Secondo" />
    </VerticalStackLayout>
</ContentPage>