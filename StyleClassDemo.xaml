<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MAUI_Styles.StyleClassDemo"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="StyleClassDemo">
    <ContentPage.Resources>
        <Style Class="deleteBtn" TargetType="Button">
            <Setter Property="BackgroundColor" Value="Red" />
        </Style>
    </ContentPage.Resources>
    <VerticalStackLayout>
        <Label Text="testo prova" />
        <Button StyleClass="btnText, btnLight" Text="Ciao" />
        <Button StyleClass="btnText, btnDark" Text="Ciao" />
        <Button StyleClass="btnText, deleteBtn" Text="Ciao" />
    </VerticalStackLayout>
</ContentPage>